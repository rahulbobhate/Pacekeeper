<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DemoActivity">

    <TextView
        android:text="This is just a dummy interpretation depicting app functionality."
        android:layout_width="wrap_content"
        android:textColor="#003"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textColor="#003"
        android:id="@+id/speedDemo"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pace"
        android:textColor="#003"
        android:id="@+id/paceDemo"
        android:layout_below="@+id/speedDemo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Variation"
        android:id="@+id/numberpickertext"
        android:textColor="#003"
        android:layout_alignBottom="@+id/numberPicker1"
        android:layout_alignRight="@+id/paceDemo"
        android:layout_alignEnd="@+id/paceDemo"
        android:layout_marginBottom="49dp" />

    <NumberPicker
        android:id="@+id/numberPicker1"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp" />



</RelativeLayout>
